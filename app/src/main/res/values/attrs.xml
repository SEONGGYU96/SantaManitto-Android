<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SantaEditText">
        <attr name="rightButton" format="enum">
            <enum name="none" value="0" />
            <enum name="add" value="1" />
            <enum name="delete" value="2" />
        </attr>
        <attr name="hint" format="string" />
        <attr name="isSingleLine" format="boolean" />
        <attr name="isEditable" format="boolean" />
        <attr name="isSlim" format="boolean" />
        <attr name="maxLength" format="integer" />
        <attr name="maxLines" format="integer" />
    </declare-styleable>

    <declare-styleable name="SantaImageRoundButton">
        <attr name="title" format="string" />
        <attr name="description" format="string" />
    </declare-styleable>

    <declare-styleable name="SantaCheckBox">
        <attr name="text" format="string" />
        <attr name="isChecked" format="boolean" />
        <attr name="hasArrow" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SantaSmallButton">
        <attr name="buttonMode" format="enum">
            <enum name="minus" value="0" />
            <enum name="minus_limit" value="1" />
            <enum name="plus" value="2" />
            <enum name="plus_limit" value="3" />
            <enum name="cancel" value="4" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SantaSwitch">
        <attr name="onText" format="string" />
        <attr name="offText" format="string" />
        <attr name="isOn" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SantaBackground">
        <attr name="backKey" format="boolean" />

        <attr name="backgroundLogo" format="boolean" />
        <attr name="santa" format="boolean" />
        <attr name="santaHead" format="boolean" />
        <attr name="rudolf" format="boolean" />
        <attr name="snowMan" format="boolean" />
        <attr name="snowflake" format="boolean" />
        <attr name="bigTitle" format="string" />
        <attr name="santaTitle" format="string" />
        <attr name="santaDescription" format="string" />
        <attr name="middleTitle" format="string" />
    </declare-styleable>

    <declare-styleable name="SantaIndicator">
        <attr name="isSelected" format="boolean" />
        <attr name="number" format="integer" />
    </declare-styleable>

    <declare-styleable name="SantaCardView">
        <attr name="moreRound" format="boolean" />
        <attr name="cardBackgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="SantaNumberPicker">
        <attr name="minValue" format="integer" />
        <attr name="maxValue" format="integer" />
    </declare-styleable>

    <declare-styleable name="SantaBottomButton">
        <attr name="isGrayButton" format="boolean" />
        <attr name="darkShadow" format="boolean" />
    </declare-styleable>

</resources>
